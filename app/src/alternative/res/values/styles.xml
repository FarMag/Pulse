<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.VKR_Pulse." parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigation.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigation.Inactive</item>
    </style>

    <style name="BottomNavigation.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="BottomNavigation.Inactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>
    <style name="CustomNumberPicker" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/custom_scroll_track</item>
        <item name="android:scrollbarSize">8dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="dividerColor">@android:color/transparent</item>
    </style>
    <style name="CircleImageViewStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/yellow</item> <!-- Цвет обводки -->
        <item name="strokeWidth">2dp</item> <!-- Толщина обводки -->
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>


