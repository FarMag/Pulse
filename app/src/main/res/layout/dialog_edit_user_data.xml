<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/rounded_dialog_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Редактировать данные"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_black"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя"
            android:background="@drawable/rounded_edittext_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/heightInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Рост (см)"
            android:inputType="number"
            android:background="@drawable/rounded_edittext_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/birthInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Дата рождения (дд.мм.гггг)"
            android:inputType="date"
            android:background="@drawable/rounded_edittext_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/targetWeightInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Целевой вес (кг)"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_edittext_bg"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Уровень активности"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/activityLevelPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Выберите уровень активности"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цель тренировок"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/trainingGoalPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Выберите цель тренировок"
            android:textColorHint="#888888"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/saveUserDataButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_green"
            android:fontFamily="@font/lato_black"
            android:text="Сохранить"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
